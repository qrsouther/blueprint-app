{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-console": "error"
  },
  "overrides": [
    {
      "files": [
        "src/utils/logger.js",
        "src/utils/forge-logger.js",
        "src/utils/performance-logger.js"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "ignorePatterns": [
    "**/*.backup",
    "**/*.bak",
    "**/*.old",
    "node_modules/**",
    "dist/**",
    "build/**"
  ]
}

